{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "target": "es5",
        "lib": ["es5", "es2015.promise", "dom"],
        "types": ["react"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
